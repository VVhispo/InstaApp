<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.photo.VideoEditorActivity">
    <androidx.media3.ui.PlayerView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:show_buffering="when_playing"
        app:surface_type="surface_view"/>
    <androidx.media3.ui.PlayerControlView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:show_next_button="false"
        app:show_previous_button="false"
        app:show_fastforward_button="false"
        app:show_rewind_button="false"
        app:show_timeout="2500"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_add_location_24"
        app:tint="@color/white"
        android:backgroundTint="@color/black_low_opa"
        android:layout_margin="5dp"
        app:borderWidth="0dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tags_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_tag_24"
        app:tint="@color/white"
        android:backgroundTint="@color/black_low_opa"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        app:borderWidth="0dp"
        />
    <Button
        android:id="@+id/upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="upload"
        android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
        android:padding="0dp"
        android:drawableTint="@color/white"
        android:paddingStart="10dp"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"/>
</RelativeLayout>