<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login_register.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/login_background"
    android:gravity="center_horizontal"
    android:id="@+id/main_layout">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:src="@drawable/ic_settings"
        app:fabSize="mini"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_margin="8dp"
        android:backgroundTint="@color/white"
        app:borderWidth="0dp"
        android:id="@+id/settings_btn" />
    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/main_icon_iv"
        android:layout_marginTop="50dp"
        android:src="@mipmap/main_icon_foreground"
        android:scaleType="fitXY"
        />
    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="310dp"
        android:orientation="vertical"
        android:id="@+id/form">
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="0dp">
        <RadioGroup
            android:checkedButton="@+id/login"
            android:id="@+id/toggle"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp">
            <RadioButton
                android:id="@+id/login"
                android:background="@drawable/switch_btn_left_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:textAlignment="textStart"
                android:text="Login"
                android:paddingLeft="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/register"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/switch_btn_right_background"
                android:button="@null"
                android:textAlignment="textEnd"
                android:text="Register"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>