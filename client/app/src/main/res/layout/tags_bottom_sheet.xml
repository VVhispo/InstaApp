<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:background="#DCFFFFFF"
    android:id="@+id/bottom_sheet_main_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="popular "
            android:textColor="@color/black_low_opa"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:scrollbars="none"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/popularTags"
                app:singleSelection="false"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="new "
            android:textColor="@color/black_low_opa"
            android:textAlignment="center" />
        <EditText
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/input_tag_name"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:theme="@style/EditTextTheme"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/add_tag_btn"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:drawableEnd="@drawable/ic_baseline_add_24"
            android:padding="0dp"
            android:drawableTint="@color/purple" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_low_opa"
        android:layout_marginVertical="10dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scrollbars="none"
        android:layout_marginBottom="10dp">
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/added_tags"
            app:singleSelection="false"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

</LinearLayout>