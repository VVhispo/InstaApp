<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.user_profile.EditedFragment"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:drawableEnd="@drawable/ic_baseline_check_24"
            android:drawableTint="@color/green_icon"
            android:layout_width="38dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:backgroundTint="@color/transparent"
            android:id="@+id/save_btn" />
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:drawableEnd="@drawable/ic_baseline_close_24"
            android:drawableTint="@color/error_red"
            android:layout_width="38dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:id="@+id/close_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/form_ll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/input_name"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:hint="name"
                android:paddingLeft="10dp"
                android:paddingBottom="15dp"
                android:backgroundTint="@color/grey_icon"
                android:textColorHint="@color/grey_icon"
                android:textColor="@color/black"
                android:textSize="14dp"/>
                />
            <EditText
                android:id="@+id/input_lastName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:hint="last name"
                android:paddingLeft="10dp"
                android:layout_gravity="right"
                android:paddingBottom="15dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/grey_icon"
                android:textColorHint="@color/grey_icon"
                android:textColor="@color/black"
                android:textSize="14dp"/>
            />
        </LinearLayout>
        <EditText
            android:id="@+id/input_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="email"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:backgroundTint="@color/grey_icon"
            android:textColorHint="@color/grey_icon"
            android:textColor="@color/black"
            android:textSize="14dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/bio_input_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:expandedHintEnabled="false"
            app:counterEnabled="true"
            app:counterMaxLength="90"
            android:layout_marginTop="10dp"
            app:boxStrokeColor="@color/grey_icon"
            android:textColorHint="@color/grey_icon"
            app:counterTextColor="@color/grey_icon"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
            <EditText
                android:id="@+id/bio_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="bio"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</LinearLayout>