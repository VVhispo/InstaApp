<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login_register.RegisterFragment"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/form_ll">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:errorTextColor="@color/error_red"
                app:boxStrokeErrorColor="@color/error_red"
                app:errorIconTint="@color/error_red"
                app:expandedHintEnabled="false">
                <EditText
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:inputType="textEmailAddress"
                    android:background="@color/transparent"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/lastname_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:expandedHintEnabled="false"
                app:errorTextColor="@color/error_red"
                app:boxStrokeErrorColor="@color/error_red"
                app:errorIconTint="@color/error_red">
                <EditText
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:inputType="textEmailAddress"
                    android:background="@color/transparent"
                    android:layout_marginLeft="20dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:expandedHintEnabled="false"
            app:errorTextColor="@color/error_red"
            app:boxStrokeErrorColor="@color/error_red"
            app:errorIconTint="@color/error_red">
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:background="@color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"
            app:expandedHintEnabled="false"
            app:errorTextColor="@color/error_red"
            app:boxStrokeErrorColor="@color/error_red"
            app:errorIconTint="@color/error_red">
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@color/transparent"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Register"
            android:textColor="@color/white"
            app:cornerRadius="30dp"
            app:backgroundTint="@color/purple"
            android:id="@+id/confirmBtn"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_link"
            android:textColor="@color/link"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:id="@+id/confirm_link"
            android:visibility="invisible"
            />
    </LinearLayout>

</FrameLayout>