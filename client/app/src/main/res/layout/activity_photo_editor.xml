<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.photo.PhotoEditorActivity">
    <ImageView
        android:id="@+id/display_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/filters_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_photo_filter_24"
        app:tint="@color/white"
        android:backgroundTint="@color/black_low_opa"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:borderWidth="0dp"
        />
    <LinearLayout
        android:id="@+id/filters_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/black_low_opa"
        android:layout_marginTop="5dp"
        android:layout_marginStart="53dp"
        android:visibility="invisible">
        <RadioGroup
            android:id="@+id/radiogrp_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/btn_greyscale"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/grey_icon" />
            <RadioButton
                android:id="@+id/btn_red"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/error_red" />
            <RadioButton
                android:id="@+id/btn_green"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/green_icon" />
            <RadioButton
                android:id="@+id/btn_blue"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:buttonTint="@color/blue" />
            <RadioButton
                android:id="@+id/btn_cancel"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_baseline_close_24"
                android:buttonTint="@color/silver" />
        </RadioGroup>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_flip_24"
        app:tint="@color/white"
        android:backgroundTint="@color/black_low_opa"
        android:layout_marginTop="53dp"
        android:layout_marginStart="5dp"
        app:borderWidth="0dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_flip_24"
        android:rotation="90"
        app:tint="@color/white"
        android:backgroundTint="@color/black_low_opa"
        android:layout_marginTop="103dp"
        android:layout_marginStart="5dp"
        app:borderWidth="0dp"
        />
    <Button
        android:id="@+id/upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:text="upload"
        android:drawableEnd="@drawable/ic_baseline_arrow_right_24"
        android:padding="0dp"
        android:drawableTint="@color/white"
        android:paddingStart="10dp"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_add_location_24"
        app:tint="@color/white"
        android:backgroundTint="@color/black_low_opa"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        app:borderWidth="0dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/tags_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_baseline_tag_24"
        app:tint="@color/white"
        android:backgroundTint="@color/black_low_opa"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="68dp"
        app:borderWidth="0dp"
        />
    <TextView
        android:id="@+id/txt_location"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="35dp"
        />
</RelativeLayout>